<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/final_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:srcCompat="@drawable/logohealme" />


    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_edittext"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:textSize="15sp"
        android:textColor="#333333"
        android:drawablePadding="25dp"
        android:hint="Ingrese correo"
        android:textColorHint="#d0d0d0"
        android:paddingTop="5dp"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_email"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/et_email"
        android:background="#CCCCCC" />
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_password"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/rounded_edittext_below"
        android:layout_below="@+id/et_email"
        android:textSize="15sp"
        android:textColor="#333333"
        android:cursorVisible="true"
        android:drawablePadding="25dp"
        android:hint="Ingrese contraseÃ±a"
        android:textColorHint="#d0d0d0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="20dp"
        android:drawableStart="@drawable/ic_password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_login"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:layout_below="@+id/et_password"
        android:onClick="gomainview"
        android:text="Ingresar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_register"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/bt_login"
        android:onClick="goregister"
        android:text="Registrar"/>


</RelativeLayout>